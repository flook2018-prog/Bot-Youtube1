CREATE TABLE users (
  id INT AUTO_INCREMENT PRIMARY KEY,
  telegram_id VARCHAR(50),
  group_id VARCHAR(50)
);

CREATE TABLE channels (
  id INT AUTO_INCREMENT PRIMARY KEY,
  user_id INT,
  name VARCHAR(255),
  url TEXT,
  channel_id VARCHAR(255),
  last_status VARCHAR(50) DEFAULT 'Unknown',
  FOREIGN KEY (user_id) REFERENCES users(id)
);
